<div class="container">
  <div class="row">
    <div class="offset-sm-1 offset-md-2 offset-lg-4 col-sm-10 col-md-8 col-lg-4">
      {{#if msg}}
      <div class="alert alert-{{msgType}}" role="alert">
        {{msg}}
      </div>
      {{/if}}
      {{#if editProfile}}
      <form method="POST" action="/profile/edit-profile/otp/redirect">
      {{else}}
      <form method="POST" action="/auth/login">
      {{/if}}
        <div class="form-group">
          <input
            type="hidden"
            class="form-control"
            id="username"
            aria-describedby="username"
            value="{{email}}"
            name="username" />
        </div>
        <div class="form-group">
          <label for="password">Verification code</label>
          <input
            type="text"
            class="form-control"
            id="password"
            aria-describedby="password"
            placeholder="Enter the code"
            autocomplete="off"
            name="password" />
          <small class="form-text text-muted">This is for the security of your account.</small>
        </div>
        <button type="submit" name="submitCode" class="btn btn-primary">Submit</button>
      </form>
      <hr />
      {{#if editProfile}}
      <a href="/profile/edit-profile/otp"><small class="form-text text-muted">Send code again.</small></a>
      {{else}}
      <a href="/auth/otp"><small class="form-text text-muted text-center">Send code again.</small></a>
      {{/if}}
    </div>
  </div>
</div>