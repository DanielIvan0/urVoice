<div class="container">
  <div class="row">
    <div class="offset-4 col-4">
      <div class="card text-center">
        <div class="card-header">
          <div class="w-100 rounded-circle overflow-hidden" id="profile-thumbnail">
            <img src="{{user.thumbnail}}" class="w-100" alt="Profile Picture">
          </div>
        </div>
        <div class="card-body">
          <h5 class="card-title">{{user.displayName}}</h5>
          <p class="card-text">{{user.email}}</p>
          <p class="card-text">{{user.degree}}</p>
          <p class="card-text">
          {{#if user.occupation.0.student}}
          Student
          {{/if}}
          {{#if user.occupation.0.teacher}}
          Teacher
          {{/if}}
          {{#if user.occupation.0.admin}}
          Administrative
          {{/if}}
          in {{user.college}}
          </p>
          <a href="/" class="btn btn-primary">Go Home, brother</a>
          <a href="/profile/edit-profile"><small class="form-text text-muted">Edit Profile</small></a>
          <a href="/profile/delete-account"><small class="form-text text-muted">Delete Account</small></a>
        </div>
      </div>
    </div>
  </div>
</div>